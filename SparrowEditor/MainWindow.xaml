<Window x:Class="SparrowEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SparrowEditor"
        mc:Ignorable="d"
        Title="{DynamicResource ResourceKey=app.Title}" Height="450" Width="800">
    <Grid>
        <Menu x:Name="mnuMain" >
            <MenuItem x:Name="mnuFile" Header="{DynamicResource ResourceKey=menu.File}">
                <MenuItem x:Name="mniOpen" Header="{DynamicResource ResourceKey=menu.item.Open}" Click="mniOpen_Click"/>
                <MenuItem x:Name="mniSave" Header="{DynamicResource ResourceKey=menu.item.Save}"/>
            </MenuItem>
            <MenuItem x:Name="mnuEdit" Header="{DynamicResource ResourceKey=menu.Edit}">

            </MenuItem>
            <MenuItem x:Name="mnuView" Header="{DynamicResource ResourceKey=menu.View}">
                <Label>A sla, só vai tomar no seu cu</Label>
                <!-- KKKKKKKKKKKKKKKKKKK -->
            </MenuItem>
        </Menu>


        <GroupBox x:Name="grbSprite" Header="{DynamicResource ResourceKey=panel.CommomData}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,5,0" Height="154" Width="210">
            <TextBox x:Name="nudX" Text="{Binding SparrowFormat.x}" Height="20" Width="120" d:LayoutOverrides="Height" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,8,0,0"/>
        </GroupBox>
        <Label x:Name="lblX" Content="X Pos" HorizontalAlignment="Right" Margin="0,7,134,0" VerticalAlignment="Top"/>

        <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Button x:Name="btnZoomUP" Content="{DynamicResource ResourceKey=button.ZoomP}"/>
            <Button x:Name="btnZoomDOWN" Content="{DynamicResource ResourceKey=button.ZoomM}" Margin="3,0" />
        </StackPanel>
        <Canvas HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
